{
  "name": "zodsform",
  "version": "0.1.6",
  "description": "Generador de formularios dinámicos con validación automática usando Zod",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src/styles.css",
    "README.md"
  ],
  "scripts": {
    "build:css": "npx tailwindcss -i src/styles.css -o dist/styles.css --minify",
    "build:ts": "tsc",
    "build": "npm run build:css && npm run build:ts",
    "dev:css": "npx tailwindcss -i src/styles.css -o dist/styles.css --watch",
    "dev:ts": "tsc --watch",
    "dev": "npm run build:css && npm run dev:ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dinnger/zodsform.git"
  },
  "keywords": [
    "form",
    "json",
    "zod",
    "validation",
    "typescript",
    "dynamic-forms",
    "form-builder",
    "schema-validation",
    "form-generator",
    "tailwindcss",
    "tailwind"
  ],
  "author": "Dinnger",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dinnger/zodsform/issues"
  },
  "homepage": "https://github.com/dinnger/zodsform#readme",
  "peerDependencies": {
    "zod": "^3.0.0 || ^4.0.0"
  },
  "dependencies": {
    "zod": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@vitest/browser": "^4.0.8",
    "@vitest/browser-playwright": "^4.0.8",
    "autoprefixer": "^10.4.22",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}